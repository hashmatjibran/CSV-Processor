<link rel="stylesheet" href="/css/homepage.css">


<form class="mt-5 mb-5" id="myForm" method="POSt" action="/" enctype="multipart/form-data">
 <div class="mb-3">
    <label for="csvFile" class="form-label">Upload a .Csv File</label>
    <input type="file" name="file" class="form-control" id="csvFile" pattern="^.+\.(xlsx|xls|csv)$" accept=".csv">
    <span class="error"></span>
  </div>
  <div class="mb-3">
    <button id="checkCsv" type="button" class="btn btn-success mb-3">Validate</button>
    <button id="submitCsv" type="submit" class="btn btn-primary mb-3">Upload</button>
  </div>
</form>




<div class="yourCsvs">
    <h5 class="text-success text-capitalize">
        Your csv files
    </h5>

    <ul>
        <%for(csv of csvs){%>
            <li>
                <div class="listItems">
                    <section class="csvName">
                       <h3><%=csv.filename%> </h3> 
                    </section>

                    <section class="actions">
                        <a href="/view/csv/<%=csv.file%>"><i class="fa-regular fa-folder-open"></i></a>
                        <!-- <a href="/delete/csv/<%=csv.file%>"><i class="fa-solid fa-trash-can"></i></a> -->
                    </section>

                    <section class="uploadTime">
                        <%=csv.date%> &nbsp; <%=csv.time%>
                    </section>
                    
                </div>
                
                    
                
                
                
                
                
            </li>
            <hr>
            <%}%>
    </ul>  
</div>


    <script src="/js/uploadCsv.js"></script>